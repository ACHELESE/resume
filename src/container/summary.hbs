{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
   {{#with main}}
        <main>
            <section>
                {{> title data="Summary" big=true}}

                    {{#each summary}}
                        {{name}}
                    {{/each}}  
            </section>
            <hr>
                <section>
                   {{> title data="Experience" big=true}}

                    {{#each experience}}
                        {{name}}
                    {{/each}}  
                </section>
        {{/with}}
    </main>
</div>



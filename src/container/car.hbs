{{!-- Це файл з кодом, який виводиться якщо в нас є помилка --}}
<header>
    <div>
        <div>
          <button type="button" class="btn btn-primary btn-lg">{{make}}</button>
          <button type="button" class="btn btn-success">{{model}}</button>
          <button type="button" class="btn btn-success">{{year}}</button>
          <button type="button" class="btn btn-secondary">{{color}}</button>
        </div>
    </div>
</header>
    <hr>
<div>
    <div>
        <p class="fw-bold"><button type="button" class="btn btn-warning">FEATURES</button></p>
    {{#with features}}
      {{#with interior}}
        <p class="fw-bold"><button type="button" class="btn btn-light">SEATS</button></p>
          {{#with seats}}
        <div>
          <p class="fw-bold"><button type="button" class="btn btn-info" disabled>material :</button> <button type="button" class="btn btn-outline-secondary" disabled>{{material}}</button></p>
          <p class="fw-bold"><button type="button" class="btn btn-info" disabled>material :</button> <button type="button" class="btn btn-outline-secondary" disabled>{{color}}</button></p>
        </div>
          {{/with}}
        <hr>
        <p class="fw-bold"><button type="button" class="btn btn-light">DASHBOARD</button></p>
        {{#with dashboard}}
          <div>
          <p class="fw-bold"><button type="button" class="btn btn-info" disabled>material :</button> <button type="button" class="btn btn-outline-secondary" disabled>{{material}}</button></p>
          <p class="fw-bold"><button type="button" class="btn btn-info" disabled>material :</button> <button type="button" class="btn btn-outline-secondary" disabled>{{color}}</button></p>
          {{#with display}}
          <p class="fw-bold"><button type="button" class="btn btn-warning">Display</button></p>
          <button type="button" class="btn btn-outline-danger">Type :</button> <button type="button" class="btn btn-success" disabled>{{type}}</button>
          <button type="button" class="btn btn-outline-danger">Size :</button> <button type="button" class="btn btn-success" disabled>{{size}}</button>
          <button type="button" class="btn btn-outline-danger">Resolution :</button> <button type="button" class="btn btn-success" disabled>{{resolution}}</button>
          {{/with}}
          </div>
        {{/with}}
        <hr>
        <div>
          {{#with audio}}
         <p class="fw-bold"><button type="button" class="btn btn-warning">Audio</button></p> 
          <button type="button" class="btn btn-outline-danger">System :</button> <button type="button" class="btn btn-success" disabled>{{system}}</button>
          <button type="button" class="btn btn-outline-danger">Speakers :</button> <button type="button" class="btn btn-success" disabled>{{speakers}}</button>
          <button type="button" class="btn btn-outline-danger">bluetooth</button>
          <button type="button" class="btn btn-outline-danger">USB</button>
          {{/with}}
        </div>
      {{/with}}
      <hr>
      {{#with exterior}}
        <button type="button" class="btn btn-outline-dark">EXTERIOR</button>
        <div>
        <br>
        {{#with wheels}}
        <p class="fw-bold"><button type="button" class="btn btn-outline-warning">Wheels</button></p> 
        <h5> size  {{size}}</h5> 
        <h5> type  {{type}}</h5>
        <h5> color  {{color}}</h5>
        {{/with}}
        <br>
        {{#with headlights}}
        <p class="fw-bold"><button type="button" class="btn btn-outline-warning">Headlights</button></p> 
        <h5>type  {{type}}</h5> 
        <h5> brightness  {{brightness}}</h5>
        {{/with}}
        <hr>
        {{#with sunroof}}
        <p class="fw-bold"><button type="button" class="btn btn-outline-warning">Sunroof</button></p> 
        <h5>type  <em>{{type}}</em></h5> 
        <h5> size  <em>{{size}}</em></h5>
        {{/with}}
        <br>
      {{/with}}
    {{/with}}
        <hr>
        <div>
          {{#with engine}}
          <p class="fw-bold"><button type="button" class="btn btn-primary btn-lg">ENGINE</button></p>
          <button type="button" class="btn btn-outline-danger">Type :</button> <button type="button" class="btn btn-success" disabled>{{type}}</button>
          <button type="button" class="btn btn-outline-danger">Displacement :</button> <button type="button" class="btn btn-success" disabled>{{displacement}}</button>
          <button type="button" class="btn btn-outline-danger">Horsepower :</button> <button type="button" class="btn btn-success" disabled>{{horsepower}}</button>
          <button type="button" class="btn btn-outline-danger">Torque :</button> <button type="button" class="btn btn-success" disabled>{{torque}}</button>
        {{#with transmission}}
        <p class="fw-bold"><button type="button" class="btn btn-primary btn-lg">transmission</button></p>
        <h5>type  {{type}}</h5> 
        <h5> gears  {{gears}}</h5>
        {{/with}}
        {{/with}}
      </div>
      <folder>
        <hr>
        {{#with price}}
        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
        <button type="button" class="btn btn-danger"><h3>PRICE</h3></button>
        <button type="button" class="btn btn-warning">Base</button><button type="button" class="btn btn-warning">{{base}}</button>
        <button type="button" class="btn btn-success">Destination</button><button type="button" class="btn btn-success">{{destination}}</button>
        </div>
        <br>
        {{#with options}}
        <br>
        <div class="btn-group btn-group-lg" role="group" aria-label="Large button group">
        <button type="button" class="btn btn-outline-primary">navigation</button><button type="button" class="btn btn-outline-primary">{{navigation}}</button>
        <button type="button" class="btn btn-outline-primary">moonroof</button><button type="button" class="btn btn-outline-primary">{{moonroof}}</button>
        <button type="button" class="btn btn-outline-primary">premium_paint</button><button type="button" class="btn btn-outline-primary">{{premium_paint}}</button>
        </div>
        <div>
        <br>
        <hr>
        <button type="button" class="btn btn-danger"><h2>TOTAL</h2></button><button type="button" class="btn btn-danger"><h2>28990</h2></button>
        </div>
      </folder>
    {{/with}}
  {{/with}}

